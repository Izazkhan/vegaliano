<main class="content-area max-w-[1600px] mx-auto">
    <div class="explore-more relative mt-12 px-4">
    <h2 class="text-[15px] md:text-[30px] text-[#363636] text-center my-4 uppercase font-semibold"><span>More To
            Explore</span></h2>
    <div class="embla_explore_more relative w-full px-2 lg:px-0">
        <div class="embla_explore_more__viewport overflow-hidden">
            <div class="embla_explore_more__container flex md:gap-8 md:pl-8">
                {% for i in (1..8) %}
                <div
                    class="embla_explore_more__slide embla__slide -mr-2 grow-0 shrink-0 basis-[50%] md:basis-[60%] lg:basis-1/3">
                    <div class="__slide w-full flex flex-col justify-center gap-2 items-center ">
                        <div class="relative group select-none w-full aspect-[1]">
                            <img src="https://placehold.co/585" alt="" class="object-cover object-center">
                        </div>
                        <div
                            class="cat-title font-semibold text-[#222] text-[13px] md:text-[22px] tracking-[3px] uppercase">
                            Essentials {{ i }}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
        const OPTIONS = {
            slidesToScroll: 1,
            loop: true,
            align: 'center'
        };
        const emblaNode = document.querySelector('.embla_explore_more');
        const viewportNode = emblaNode.querySelector('.embla_explore_more__viewport');

        const embla = EmblaCarousel(viewportNode, OPTIONS);
        const removeTweenScale = EmblaUtils.setupTweenScale(embla);

        // Get all slides
        const slides = emblaNode.querySelectorAll('.embla__slide');
    })();
</script>
</main>