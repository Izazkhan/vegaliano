<cart-items class="is-emptyy">
  <div class="max-w-[1600px] mx-auto px-4">
    <!-- Cart Header -->
    <div class="cart__header text-center py-8">
      <h1 class="text-3xl font-bold">Your Cart</h1>
    </div>

    <!-- Empty Cart Message -->
    <div class="cart__warnings flex justify-center items-center h-[50vh] text-center hidden">
      <h1 class="text-2xl font-medium text-gray-600">Your Cart is Empty</h1>
    </div>

    <!-- Cart Items Table -->
    <div class="cart-items">
      <form action="#" method="POST" id="cart">
        <table class="cart-table table-auto border-collapse w-full text-left text-sm">
          <!-- Table Caption -->
          <caption class="hidden">
            Your cart
          </caption>

          <!-- Table Header -->
          <thead>
            <tr>
              <th colspan="2" class="px-4 py-2">Product</th>
              <th class="px-4 py-2">Quantity</th>
              <th class="px-4 py-2 text-right">Total</th>
            </tr>
          </thead>

          <!-- Table Body -->
          <tbody>
            <!-- Dummy Item 1 -->
            <tr>
              <td class="cart-item__media px-4 py-2">
                <img src="https://via.placeholder.com/100" alt="Product 1" class="w-16 h-16 object-cover">
              </td>
              <td class="cart-item__details px-4 py-2">
                <a href="#" class="text-blue-500 hover:underline font-medium">Dummy Product 1</a>
                <div class="text-sm text-gray-500">
                    <div>$20.00</div>
                    <div>Color: Black</div>
                </div>
              </td>
              <td class="cart-item__quantity px-4 py-2">
                <quantity-input class="flex items-center">
                  <input
                    type="number"
                    name="updates[]"
                    value="1"
                    min="1"
                    class="w-16 rounded px-2 py-1 text-center"
                  >
                  <cart-remove-button>
                    <a href="#" class="text-sm">
                      <svg class="w-4 h-4 inline-block">
                        <use href="#cart-remove"></use>
                      </svg>
                    </a>
                  </cart-remove-button>
                </quantity-input>
              </td>
              <td class="cart-item__total px-4 py-2 text-right">$20.00</td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </div>
</cart-items>

{% schema %}
{
  "name": "Cart Items",
  "settings": []
}
{% endschema %}
