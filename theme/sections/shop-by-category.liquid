<div class="shop-by-category relative">
    <h2 class="text-[15px] md:text-[30px] text-[#363636] text-center my-4 uppercase font-semibold"><span>Shop By Category</span></h2>
    <div class="embla_categories relative w-full">
        <div class="embla_categories__viewport overflow-hidden">
            <div class="embla_categories__container flex gap-1 pl-[0.23rem]">
                {% for i in (1..8) %}
                <div
                    class="embla_categories__slide flex flex-col justify-center gap-2 items-center grow-0 shrink-0 basis-1/2 lg:basis-1/3">
                    <div class="relative w-full overflow-hidden group select-none aspect-[0.79]">
                        <img width="100%" height="100%" src="//asimjofa.com/cdn/shop/files/Kids_Teen-min_ba3f59ad-efa1-45f4-bccf-86515aaf3e5d.jpg"
                            alt="AJLW-07 SATIN SILK 2 PCS" class="h-full absolute top-0 object-cover object-center">
                    </div>
                    <div class="cat-title font-semibold text-[#222] text-[10px] md:text-[22px] tracking-[3px] uppercase">
                        Essentials {{ i }}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
        const OPTIONS = {
            slidesToScroll: 2,
            loop: true,
            align: 'start',
            breakpoints: {
                // Applies for large screens
                '(min-width: 1024px)': {
                    slidesToScroll: 3
                }
            }
        };
        const emblaNode = document.querySelector('.embla_categories');
        const viewportNode = emblaNode.querySelector('.embla_categories__viewport');

        const emblaApi = EmblaCarousel(viewportNode, OPTIONS);
    })();
</script>