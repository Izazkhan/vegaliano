<cart-footer class="{% if cart == empty %} is-empty{% endif %}">
    <div class="cart-footer max-w-[1200px] mx-auto px-4 py-6 text-right">
        <div class="totals mb-4">
            <h2 class="totals__total text-lg font-semibold">Total</h2>
            <p class="totals__total-value text-xl font-bold text-gray-800" id="cart-total-price">
                {{ cart.total_price | money_with_currency }}
            </p>
        </div>
        <small class="tax-note caption-large block text-gray-500 mb-4">
            Taxes, discounts, and shipping calculated at checkout.
        </small>
        <div>
            <a href="/checkout" class="bg-gray-950 text-white px-6 py-2 rounded hover:bg-gray-900">
                Checkout
            </a>
        </div>
    </div>
</cart-footer>