<div class="hidden flex justify-center items-center p-5">
    <div class="text-[#363636] text-center w-1/5">
        <h2 class="text-[15px] md:text-[30px] leading-[1.4] font-medium">WHAT'S</h2>
        <h2 class="text-[30px] md:text-[45px] leading-[1.4] font-semibold">NEW</h2>
    </div>
    <div class="w-4/5 flex-1 flex">

    </div>
</div>
<div class="embla max-w-[48rem] mx-auto">
    <div class="embla__viewport overflow-hidden">
        <div class="embla__container flex -ml-[1rem] touch-pan-y">
            <div class="embla__slide flex-none w-[50%] min-w-0 pl-[1rem] translate-3d">
                <div
                    class="embla__slide__number flex items-center justify-center text-4xl font-semibold shadow-inner rounded-[1.8rem] h-[19rem] select-none">
                    1
                </div>
            </div>
            <div class="embla__slide flex-none w-[50%] min-w-0 pl-[1rem] translate-3d">
                <div
                    class="embla__slide__number flex items-center justify-center text-4xl font-semibold shadow-inner rounded-[1.8rem] h-[19rem] select-none">
                    2
                </div>
            </div>
            <div class="embla__slide flex-none w-[50%] min-w-0 pl-[1rem] translate-3d">
                <div
                    class="embla__slide__number flex items-center justify-center text-4xl font-semibold shadow-inner rounded-[1.8rem] h-[19rem] select-none">
                    3
                </div>
            </div>
            <div class="embla__slide flex-none w-[50%] min-w-0 pl-[1rem] translate-3d">
                <div
                    class="embla__slide__number flex items-center justify-center text-4xl font-semibold shadow-inner rounded-[1.8rem] h-[19rem] select-none">
                    4
                </div>
            </div>
            <!-- Additional Slides -->
        </div>
    </div>

    <!-- Controls -->
    <div class="embla__controls grid grid-cols-[auto_1fr] gap-[1.2rem] mt-[1.8rem]">
        <div class="embla__buttons grid grid-cols-2 gap-[0.6rem] items-center">
            <button
                class="embla__button embla__button--prev flex items-center justify-center rounded-full w-[3.6rem] h-[3.6rem] text-body shadow-inner"
                aria-label="Previous">
                <!-- SVG Icon -->
            </button>
            <button
                class="embla__button embla__button--next flex items-center justify-center rounded-full w-[3.6rem] h-[3.6rem] text-body shadow-inner"
                aria-label="Next">
                <!-- SVG Icon -->
            </button>
        </div>
    </div>

    <!-- Dots -->
    <div class="embla__dots flex flex-wrap justify-end items-center -mr-[calc((2.6rem-1.4rem)/2)]">
        <button class="embla__dot flex items-center justify-center rounded-full w-[2.6rem] h-[2.6rem]"
            aria-label="Dot 1">
            <span class="w-[1.4rem] h-[1.4rem] shadow-inner rounded-full"></span>
        </button>
        <!-- Additional Dots -->
    </div>
</div>

<script>
    (function () {
        const OPTIONS = { slidesToScroll: 2 };

        const emblaNode = document.querySelector('.embla');
        const viewportNode = emblaNode.querySelector('.embla__viewport');
        const prevBtnNode = emblaNode.querySelector('.embla__button--prev');
        const nextBtnNode = emblaNode.querySelector('.embla__button--next');
        const dotsNode = emblaNode.querySelector('.embla__dots');

        const emblaApi = EmblaCarousel(viewportNode, OPTIONS);

        // Using EmblaUtils-prefixed functions
        const removePrevNextBtnsClickHandlers = EmblaUtils.addPrevNextBtnsClickHandlers(
            emblaApi,
            prevBtnNode,
            nextBtnNode
        );
        const removeDotBtnsAndClickHandlers = EmblaUtils.addDotBtnsAndClickHandlers(
            emblaApi,
            dotsNode
        );

        // Clean up event listeners on destroy
        emblaApi.on('destroy', removePrevNextBtnsClickHandlers);
        emblaApi.on('destroy', removeDotBtnsAndClickHandlers);

    })();
</script>