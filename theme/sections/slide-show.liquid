<div class="embla_slides relative w-full">
  <div class="embla_slides_viewport overflow-hidden w-full">
    <div class="embla_slides_container aspect-[1.07] md:aspect-[2.3] flex">
      {% for block in section.blocks %}
        <div class="embla_slides_slide flex-none w-full">
          <a href="{{ block.settings.collection.url }}">
              {% render 'slider-image', mb_src: block.settings.mobileImage, src: block.settings.image, alt: block.settings.alt %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
  <!-- Slider indicators -->
  <div
    class="embla_slides_dots absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse"
  ></div>
  <!-- Arrow Buttons without background -->
  <button
    class="embla_slides_button embla_slides_button--prev absolute top-1/2 left-4 transform -translate-y-1/2 text-gray-700 hover:text-gray-900 disabled:text-gray-400"
  >
    <svg class="w-6 h-6" viewBox="0 0 532 532" fill="currentColor">
      <path
          d="M355.66 11.354c13.793-13.805 36.208-13.805 50.001 0 13.785 13.804 13.785 36.238 0 50.034L201.22 266l204.442 204.61c13.785 13.805 13.785 36.239 0 50.044-13.793 13.796-36.208 13.796-50.002 0a5994246.277 5994246.277 0 0 0-229.332-229.454 35.065 35.065 0 0 1-10.326-25.126c0-9.2 3.393-18.26 10.326-25.2C172.192 194.973 332.731 34.31 355.66 11.354Z" />
    </svg>
  </button>

  <button
    class="embla_slides_button embla_slides_button--next absolute top-1/2 right-4 transform -translate-y-1/2 text-gray-700 hover:text-gray-900 disabled:text-gray-400"
  >
    <svg class="w-6 h-6" viewBox="0 0 532 532" fill="currentColor">
      <path
          d="M176.34 520.646c-13.793 13.805-36.208 13.805-50.001 0-13.785-13.804-13.785-36.238 0-50.034L330.78 266 126.34 61.391c-13.785-13.805-13.785-36.239 0-50.044 13.793-13.796 36.208-13.796 50.002 0 22.928 22.947 206.395 206.507 229.332 229.454a35.065 35.065 0 0 1 10.326 25.126c0 9.2-3.393 18.26-10.326 25.2-45.865 45.901-206.404 206.564-229.332 229.52Z" />
    </svg>
  </button>
</div>
<script type="text/javascript">
  (function () {
    const OPTIONS = { loop: true, duration: 30 };
    const emblaNode = document.querySelector('.embla_slides');
    const viewportNode = emblaNode.querySelector('.embla_slides_viewport');
    const prevBtn = emblaNode.querySelector('.embla_slides_button--prev');
    const nextBtn = emblaNode.querySelector('.embla_slides_button--next');
    const dotsNode = document.querySelector('.embla_slides_dots');

    const emblaApi = EmblaCarousel(viewportNode, OPTIONS, [EmblaCarouselFade()]);

    const removePrevNextBtnsClickHandlers = EmblaUtils.addPrevNextBtnsClickHandlers(emblaApi, prevBtn, nextBtn);
    const removeDotBtnsAndClickHandlers = EmblaUtils.addDotBtnsAndClickHandlers(emblaApi, dotsNode);

    emblaApi.on('destroy', removePrevNextBtnsClickHandlers).on('destroy', removeDotBtnsAndClickHandlers);
  })();
</script>
{% schema %}
{
  "name": "Slider Show",
  "settings": [],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "header",
          "content": "Set slider images with appropriate sizes"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image (1920x810)"
        },
        {
          "type": "image_picker",
          "id": "mobileImage",
          "label": "Image (770x770)"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Slide Link"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "ALT",
          "default": "Slider Image"
        },
        {
          "type": "checkbox",
          "id": "featured",
          "label": "Enable",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {"name": "Slide Show"}
  ]
}
{% endschema %}
